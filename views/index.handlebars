
  {{#each trendingWords}}

		<!-- word card -->
		<div class="col-lg-3 col-md-6">
			<div class="card" data="{{route}}">
				<div class="view">
					<img src="{{image}}" class="img-fluid" />
				</div>

				<div class="card-body">
					<h5 class="card-title">{{word}}</h5>
					<p class="card-text">{{meaning}}</p>
					{{#if saved}}
					<a href="#" class="unsave btn btn-blue-grey">Unsave</a>
					{{else}}
					<a href="#" class="save btn btn-info">Save</a>
					{{/if}}
				</div>
			</div>
		</div>

  {{/each}}

