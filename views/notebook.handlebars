{{#if savedWords}}

<section class="wordbook container">
	<div class="row d-flex align-items-stretch">

{{#each savedWords}}

<!-- word card -->
<div class="word-card col-lg-3 col-md-6 d-flex align-items-stretch">
	<div class="card" data="{{_id}}">
		<div class="view">
			<img src="{{image}}" class="img-word img-fluid" />
		</div>

		<div class="card-body">
			<h5 class="card-title">{{word}}</h5>
			<p class="card-text">{{meaning}}</p>
			<div class="d-flex justify-content-start">
				<a href="#" class="detail btn btn-info" data-toggle="modal" data-target="#lightbox">Note</a>
				<a href="#" class="unsave btn btn-blue-grey">Unsave</a>
			</div>
		</div>
	</div>
</div>

{{/each}}

</div>
</section>

{{else}}

<section class="jumbotron row" style="background:none">
	<div class="col-md-12">
		<div class="text-center py-5 px-4 my-5">
			<h4 class="card-title mb-3 mt-5 font-bold">Looks like you haven't saved any words.</h4>
		</div>
	</div>
</section>

{{/if}}

